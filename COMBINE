						losartan++;
						amlodipine++;
					} else if(hour == 19) {
						P("It's time to take your Metformin Again!\n");
						metformin++;
					} else if(hour == 21) {
						P("It's time to take your Atorvastatin!\n");
						atorvastatin++;
