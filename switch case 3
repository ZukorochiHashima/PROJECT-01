#include <stdio.h>

#define p printf
#define s scanf

int main() {
    int choice;

    while (1) {
        p("PillPal: Smart Medicine Reminder and Guide\n");
        p("------------------------------------------\n");
        p("1. Set Medicine Schedule\n");
        p("2. Medicine Reminder\n");
        p("3. Exiting the Program\n");
        p("------------------------------------------\n");
        p("Enter your choice (1-3): ");
        s("%d", &choice);

        switch (choice) {
            Case 1:
                p("\n--- CASE 1: Set Medicine Schedule ---\n");
                // Put the switch case 1 code hereee
                break;
            Case 2:
                p("\n--- CASE 2: Medicine Reminder ---\n");
                // Put the switch case 2 code hereee
                break;
            Case 3:
                p("\nThank you for using PillPal! Stay healthy!\n");
                p("\nTake your meds on schedule with PillPal. You're in control after all\n.");
                return 0;

            default:
                p("\nIncorrect input. Please try again.\n");
                break;
        }
    }

    return 0;
}

